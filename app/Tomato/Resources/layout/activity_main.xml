

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:title="Tomato Method"
        android:titleTextColor="#FFFFFF">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#00000000"
            android:src="@mipmap/baseline_settings_white_36"
            android:layout_marginRight="20px"
            android:id="@+id/settings_button"/>
    </Toolbar>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@layout/circle"
        android:layout_gravity="center"
        android:layout_marginTop="60dp">
        <TextView
            android:text="00:00"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl"
            android:textSize="@dimen/abc_action_bar_content_inset_with_nav"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp" />
    </LinearLayout>
    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl"
        android:id="@+id/start_button"/>
    <Button
        android:text="Pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_button"
        android:id="@+id/pause_button" />
    <Button
        android:text="Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pause_button"
        android:id="@+id/stop_button" />

</LinearLayout>